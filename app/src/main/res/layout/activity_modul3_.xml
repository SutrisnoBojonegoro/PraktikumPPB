<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange"
    tools:context="com.example.sutrisno.praktikumppb.Modul3.Modul3_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Form Data Diri"
            android:textSize="25sp"
            android:textColor="@color/colorGreen"
            android:gravity="center" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:columnCount="2"
        android:rowCount="7">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Nama"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editText_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="NIM"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/editText_nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:inputType="number"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Jurusan"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"
            />

        <Spinner
            android:id="@+id/spiner_jur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:layout_column="1"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            ></Spinner>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Kota Lahir"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"
            />

        <AutoCompleteTextView
            android:id="@+id/auto_kota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:inputType="text"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Tanggal Lahir"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_tanggal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="4"
            android:layout_column="1"
            android:text="Pilih Tanggal"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="150dp"/>
        <EditText
            android:id="@+id/editText_tanggal"
            android:layout_marginRight="160dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:textAlignment="center"
            android:hint="DD/MM/YYYY"
            android:textColorHint="@color/colorGreen"
            android:textColor="@color/colorGreen"
            android:ems="10"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Hobi"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/editText_hobi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:inputType="text"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            />

    </GridLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="250dp"
        android:layout_marginBottom="70dp"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:text="Submit"
        />
</RelativeLayout>
