<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorOrange"
    tools:context="com.example.sutrisno.praktikumppb.Modul3.Modul3_isiActivity">

    <TextView
        android:id="@+id/biodata"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Biodata Mahasiswa"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGreen"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="260dp"
        android:columnCount="2"
        android:rowCount="6">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Nama"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tV_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Nama"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="NIM"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tV_nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="NIM"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Jurusan"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tV_jur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Jurusan"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Kota Lahir"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tV_kota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="Kota Lahir"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Tanggal Lahir"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tV_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:text="Tanggal Lahir"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Hobi"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorGreen"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tV_hobi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:text="Hobi"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

    </GridLayout>

</LinearLayout>
